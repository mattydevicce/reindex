<p id="notice"><%= notice %></p>

<h1>Trips</h1>

<table>
  <thead>
    <tr>
      <th>Service</th>
      <th>Route</th>
      <th>Trip</th>
      <th>Trip headsign</th>
      <th>Trip short name</th>
      <th>Direction</th>
      <th>Shape</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.service_id %></td>
        <td><%= trip.route_id %></td>
        <td><%= trip.trip_id %></td>
        <td><%= trip.trip_headsign %></td>
        <td><%= trip.trip_short_name %></td>
        <td><%= trip.direction_id %></td>
        <td><%= trip.shape_id %></td>
        <td><%= link_to 'Show', trip %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
        <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

